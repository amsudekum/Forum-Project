{{#if forumposts.length}}
  {{#each forumposts}}
  <a href="/api/forumpost/topic/thread/{{this.id}}">
    <div class="post-card">
      <div class="title-card">
        <p>{{this.topic}}</p>
        <p>{{this.date_created}}</p>
      </div>
      <div class="description-card">
        <p>{{this.content}}</p>
      </div>
    </div>
    </a>
  {{/each}}
{{else}}
  <p>No posts found.</p>
{{/if}}